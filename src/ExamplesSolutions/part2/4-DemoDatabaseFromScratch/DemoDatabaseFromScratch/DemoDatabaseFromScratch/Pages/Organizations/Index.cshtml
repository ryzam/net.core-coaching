<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].TelephoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].City)
